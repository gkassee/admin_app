<% @user.each do |user| %>
	<%= link_to user.name, user_path(user.id) %> 
<% end %>

<br>

<%= form_for @post do |f| %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	<%= f.label :title %>
	<%= f.text_field :title %>
	<br>
	<%= f.label :body %>
	<%= f.text_area :body %>
	<br>
	<%= f.submit %>
<% end %>



<br>

<% @posts.last(10).reverse_each do |post| %>
	<h1><%= post.title %></h1>
	<p><%= post.body %></p>
	<% if session[:user_id] == post.user_id %>
		<%= link_to "edit", post_path(post.id) %>  
	<% end %>	
<% end %>